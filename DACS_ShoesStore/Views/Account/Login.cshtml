@using DACS_ShoesStore.Models
@model LoginViewModel
@using CaptchaMvc.HtmlHelpers

@{
@*    ViewBag.Title = "Log in";
*@
@*    Layout = "~/Views/Shared/_Layout.cshtml";

*@
Layout = null;
}
<header>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <link href="~/Content/assets/css/sigh-in.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
            async defer>
    </script>
@*    <h2>@ViewBag.Title.</h2>
*@</header>
<body>
    <section>
        <!-- background-left -->
        <div class="img-bg">
            <img src="~/Content/assets/img/LoginArt.png" alt="LoginArt" />
        </div>
        <!-- Content -->
        <div class="noi-dung">
            <div class="form">
                <h2>Trang Đăng Nhập</h2>
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="input-form">
                        <span>Tên Tài Khoản</span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="input-form">
                        <span>Mật Khẩu</span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    <div class="nho-dang-nhap">
                        <label>@Html.CheckBoxFor(m => m.RememberMe) Nhớ Đăng Nhập</label>
                    </div>
                    <div class="input-form" method="POST">
                        @Html.Captcha(2)
                        <p  class="text-danger">@ViewBag.ErrorMessge</p>
                    </div>
                <div class="input-form" style="text-align: center">
                        <input type="submit" name="Đăng Nhập" value="Đăng Nhập" class="btn btn-primary" />
                    </div>
                    <div class="input-form" style="text-align: center">
                        <p>Bạn Chưa Có Tài Khoản? <a href="@Url.Action("Register", "Account")">Đăng Ký</a></p>
                    </div>
                }
               @* <h3>Đăng Nhập Bằng Mạng Xã Hội</h3>
                <ul class="icon-dang-nhap">
                    <li><i class="bi bi-facebook"></i></li>
                    <li><i class="bi bi-google"></i></li>
                    <li><i class="bi bi-twitter"></i></li>
                </ul>*@
            </div>
        </div>

    </section>

</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
